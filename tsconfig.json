    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
